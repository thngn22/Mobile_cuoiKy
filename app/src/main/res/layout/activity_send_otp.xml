<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.SendOTP">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_wave">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@mipmap/logo_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gift from Farmer"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/_24sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/tv_OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:paddingTop="@dimen/_45sdp"

            android:text="Please check your mail for OTP!"
            android:textColor="#000000"
            android:textSize="@dimen/_13sdp"

            app:layout_constraintBottom_toTopOf="@+id/et_OTP"
            app:layout_constraintEnd_toEndOf="@id/btn_send"
            app:layout_constraintStart_toStartOf="@+id/et_OTP"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"

            tools:ignore="MissingConstraints">

        </TextView>

        <EditText
            android:id="@+id/et_OTP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/grey_background_edittext"
            android:ems="10"
            android:hint="Enter your OTP"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            android:textColor="#858585"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/btn_send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_OTP" />


        <TextView
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"

            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/startbutton"
            android:gravity="center"
            android:text="CHECK"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_OTP"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="477dp" />

        <TextView
            android:id="@+id/backtologin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Back to Login!"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_send" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>