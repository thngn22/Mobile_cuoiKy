<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProductActivity">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtNameFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Name Food"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VND"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/profile"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1">

        </ImageView>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/image_product">

            <ImageView
                android:id="@+id/sub_btn_product"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/minus_check_box">

            </ImageView>

            <TextView
                android:id="@+id/txt_product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="1"
                android:textAlignment="center"

                android:textSize="@dimen/_25sdp">

            </TextView>

            <ImageView
                android:id="@+id/add_btn_product"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_box">

            </ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_desc"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:padding="@dimen/_5sdp"
            android:text="Description"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_add"
            android:text="Add to Cart"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/background_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>