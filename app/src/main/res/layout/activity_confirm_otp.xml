<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LoginActivity">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_wave">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@mipmap/logo_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gift from Farmer"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/_24sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/et_confirm_pass1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/grey_background_edittext"
            android:ems="10"
            android:hint="Enter your new password"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#858585"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <EditText
            android:id="@+id/et_confirm_pass2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:background="@drawable/grey_background_edittext"
            android:ems="10"
            android:hint="Confirm your new password"
            android:inputType="textPassword"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#858585"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/et_confirm_pass1" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/startbutton"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="516dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/linkToSignUp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Already have an account? Login here!"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_confirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>